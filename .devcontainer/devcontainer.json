{
  "name": "GovInfo MCP Server",
  "dockerComposeFile": "docker-compose.yml",
  "service": "govinfo-vscode-dev",
  "workspaceFolder": "/workspaces/GovInfo",
  // Install dependencies after container starts
  "postCreateCommand": "uv sync",
  // Use the vscode user (already configured in base image)
  "remoteUser": "vscode",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "charliermarsh.ruff",
        "ms-python.mypy-type-checker",
        "GitHub.copilot",
        "GitHub.copilot-chat",
        "tamasfe.even-better-toml",
        "eamodio.gitlens",
        "yzhang.markdown-all-in-one",
        "davidanson.vscode-markdownlint",
        "ms-azuretools.vscode-containers",
        "IronGeek.vscode-env",
        "oderwat.indent-rainbow",
        "DavidAnson.vscode-markdownlint",
        "zhuangtongfa.material-theme",
        "ms-python.vscode-python-envs",
        "ZainChen.json",
        "chrisdias.promptboost"
      ],
      "settings": {
        "python.defaultInterpreterPath": "uv run python",
        "python.terminal.activateEnvironment": false
      }
    }
  },
  "forwardPorts": [
    8776
  ],
  "portsAttributes": {
    "8776": {
      "label": "MCP Server",
      "onAutoForward": "notify"
    }
  },
  "remoteEnv": {
    "PYTHONPATH": "/workspaces/GovInfo/app:/workspaces/GovInfo",
    "LOG_LEVEL": "DEBUG"
  },
  "mounts": [
    "source=/var/run/docker.sock,target=/var/run/docker.sock,type=bind",
    // Add tmpfs mounts for better performance
    "type=tmpfs,destination=/tmp",
    "type=tmpfs,destination=/workspaces/GovInfo/.pytest_cache"
  ],
  "postStartCommand": "echo 'âœ… GovInfo MCP Server dev container ready! Use: uv run python -m app.server'",
  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {}
  }
}
