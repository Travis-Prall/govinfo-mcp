{
  "mcpServers": {
    "GovInfo": {
      "command": "docker",
      "args": [
        "exec",
        "-i",
        "govinfo-mcp-server",
        "python",
        "-m",
        "app",
        "--transport",
        "stdio"
      ],
      "env": {
        "PYTHONPATH": "/src"
      },
      "alwaysAllow": true,
      "allowedCapabilities": [
        "read",
        "execute"
      ]
    }
  }
}
